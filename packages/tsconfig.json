{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationMap":true,
    "jsx": "preserve",
    "outDir": "lib",
    "declarationDir":"lib",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}